<%- include('header.ejs') %>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
    integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
  <style>
    .container {
      padding: 30px;
    }
  </style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js" integrity="sha512-d9xgZrVZpmmQlfonhQUvTR7lMPtO7NkZMkA0ABN3PHCbKA5nqylQ/yWlFAyY6hYgdF1Qh6nYiuADWwKB4C2WSw==" crossorigin="anonymous"></script>
  </head>
  <body>

    <section id="lawyer-detail" class="lawyer-detail" style="margin-bottom: 0px !important">
      <div class="container">
        <div class="profile-info text-left">
          <div class="row hidden-xs">
            <div class="col-sm-2">
              <div class="profile-picture">
                <div class="img-wrapper"
                  style="padding: 10px;width: fit-content;border: solid 1.5px #a1a1a1;border-radius: 5px;">
                  <img style="height: 145px; border-radius: 7px;" title=<%=lawyer.name.first %>
                  <%=lawyer.name.last%>
                    src="<%=lawyer.image%>"
                      alt="One of the best Advocates &amp; Lawyers in Delhi - Advocate Sudershani Ray"
                      class="img-fluid"
                      />
                </div>
                <div class="verified mt-2"
                  style="padding: 5px;border: solid 1.5px #a1a1a1;border-radius: 5px; text-align: center;"><i
                    class="bi bi-check-circle-fill" style="color: #4b9142"></i> Verified</div>
              </div>
            </div>
            <div class="col-sm-10">
              <div class="clearfix d-flex justify-content-between">
                <div class="name">
                  <h2 style="font-size: 24px; margin-bottom: 10px">
                    <b>
                      <%= lawyer.name.first %>
                        <%=lawyer.name.last%>
                    </b>
                  </h2>
                  <div class="rating">
                    <span class="star-rating">
                      <img style="margin-right: 5px"
                        src="https://lawrato.com/assets/img/sprite/icon/rating-star-full-icon.png" alt="LawRato" /><img
                        style="margin-right: 5px"
                        src="https://lawrato.com/assets/img/sprite/icon/rating-star-full-icon.png" alt="LawRato" /><img
                        style="margin-right: 5px"
                        src="https://lawrato.com/assets/img/sprite/icon/rating-star-full-icon.png" alt="LawRato" /><img
                        style="margin-right: 5px"
                        src="https://lawrato.com/assets/img/sprite/icon/rating-star-full-icon.png" alt="LawRato" /><img
                        style="margin-right: 5px"
                        src="https://lawrato.com/assets/img/sprite/icon/rating-star-half-icon.png" alt="LawRato" />
                    </span>
                    <span class="score">4.6</span> |
                    <span class="score">100</span>+ user ratings
                  </div>
                </div>
                <% if(type==='client' ){ %>
                  <form action="/lawyers/<%=lawyer._id%>" method="POST">
                    <button class="btn btn-outline-primary">Book Appointment</button>
                  </form>
                  <% } %>
              </div>
              <hr />
              <div class="row">
                <div class="col-sm-7">
                  <div class="item-info">
                    <span class="icon-holder">
                      <i class="bi bi-geo-alt-fill" style="color: #4b9142"></i>
                    </span>
                    <span class="item-label">Location: </span>
                    <span class="value">
                      <%= lawyer.address.house %>
                        <%=lawyer.name.locality%>
                          <%=lawyer.name.city%>
                            <%=lawyer.name.country%>
                    </span>
                  </div>
                  <div class="item-info">
                    <span class="icon-holder"><i class="bi bi-briefcase-fill" style="color: #4b9142"></i></span>
                    <span class="item-label">Experience: </span>
                    <span class="value">
                      <%= lawyer.experience.years %> years
                    </span>
                  </div>
                </div>
                <div class="col-sm-5">
                  <div class="item-info">
                    <span class="icon-holder"><i class="bi bi-globe" style="color: #4b9142"></i></span>
                    <span class="item-label">Languages: </span>
                    <span class="value">English, Hindi</span>
                  </div>
                  <div class="item-info">
                    <span class="icon-holder"><i class="bi bi-signpost-split-fill" style="color: #4b9142"></i></span>
                    <span class="item-label">Practice areas: </span>
                    <span class="value">
                      <%= lawyer.practiceAreas %>
                    </span>
                  </div>
                </div>
              </div>
              <hr />
            </div>
          </div>
          <div class="profile-summary">
            <%= lawyer.aboutMe %>
          </div>
          <div class="d-flex justify-content-between mt-3">
            <div style="font-weight: bold;">SPECIALIZATION</div>
            <div>
              <%=lawyer.specialization.specType%>
            </div>
          </div>
          <div class="d-flex justify-content-between mt-3">
            <div style="font-weight: bold;">COURTS</div>
            <div>
              <%=lawyer.courts%>
            </div>
          </div>
          <div class="d-flex justify-content-between mt-3">
            <div style="font-weight: bold;">EDUCATION</div>
            <div>
              <%=lawyer.education.institutionName%> - <%=lawyer.education.degreeType%> - <%=lawyer.education.completed%>
            </div>
          </div>
          <div class="d-flex justify-content-between mt-3">
            <div style="font-weight: bold;">EXPERIENCE</div>
            <div>
              <%=lawyer.experience.expType%> - <%=lawyer.experience.workPlace%> - <%=lawyer.experience.years%>
            </div>
          </div>
        </div>
      </div>
      <div class="container" style="width: 425px;">
        <h2>Career Graph</h2>
        <div>
          <canvas id="myChart"></canvas>
        </div>
      </div>
      
    </section>


    
    <script>
      var ctx = document.getElementById("myChart").getContext('2d');
      var totalCase = <%= lawyer.specialization.totalCases %>;
      var won = <%= lawyer.specialization.wonCases %>;
      var pending = <%= lawyer.specialization.pendingCases %>;
      var lost = totalCase- won -pending;
      var myChart = new Chart(ctx, {
        type: 'pie',
        data: {
          labels: ["Lost Cases", "Won Cases", "Pending Cases"],
          datasets: [{
            backgroundColor: [
              "#ff0000",
              "#00b300",
              "#3333ff"
            ],
            data: [lost, won, pending]
          }]
        }
      });
    </script>
  
  <%- include('footer') %>